{
    "network": {
        "channel": {
            "name": "mychannel",
            "genesisBlock": "../../../fabric-samples/first-network/channel-artifacts/genesis.block",
            "tx": "../../../fabric-samples/first-network/channel-artifacts/channel.tx",
            "orderer": "localhost:7050",
            "peers": ["localhost:7051", "localhost:8051", "localhost:9051", "localhost:10051"],
            "chaincode": {
                "path": "github.com/example_cc",
                "id": "examplecc",
                "version": "v0",
                "endorsement-policy": {
                    "identities": [{
                        "role": {
                            "name": "member",
                            "mspId": "Org2MSP"
                        }
                    }],
                    "policy": {
                        "1-of": [{
                            "signed-by": 0
                        }]
                    }
                },
                "instantiation-policy": {
                    "identities": [{
                        "role": {
                            "name": "member",
                            "mspId": "Org1MSP"
                        }
                    }, {
                        "role": {
                            "name": "member",
                            "mspId": "Org2MSP"
                        }
                    }],
                    "policy": {
                        "1-of": [{
                            "signed-by": 0
                        }, {
                            "signed-by": 1
                        }]
                    }
                },
                "instantiate": {
                    "fcn": "init",
                    "args": ["a", "100", "b", "200"]
                }
            }
        },
        "organizations": [{
                "mspId": "OrdererMSP",
                "tlsca": "../../../fabric-samples/first-network/crypto-config/ordererOrganizations/example.com/tlsca/tlsca.example.com-cert.pem",
                "users": [{
                    "role": "admin",
                    "username": "ordererAdmin",
                    "keystore": "../../../fabric-samples/first-network/crypto-config/ordererOrganizations/example.com/users/Admin@example.com/msp/keystore",
                    "signcerts": "../../../fabric-samples/first-network/crypto-config/ordererOrganizations/example.com/users/Admin@example.com/msp/signcerts"
                }],
                "peers": [{
                    "type": "orderer",
                    "url": "grpcs://localhost:7050",
                    "server-hostname": "orderer.example.com"
                }]
            },
            {
                "mspId": "Org1MSP",
                "tlsca": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org1.example.com/tlsca/tlsca.org1.example.com-cert.pem",
                "users": [{
                    "role": "admin",
                    "username": "greg",
                    "keystore": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org1.example.com/users/Admin@org1.example.com/msp/keystore",
                    "signcerts": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org1.example.com/users/Admin@org1.example.com/msp/signcerts"
                }],
                "peers": [{
                        "type": "endorserValidator",
                        "requests": "grpcs://localhost:7051",
                        "events": "grpcs://localhost:7053",
                        "server-hostname": "peer0.org1.example.com"
                    },
                    {
                        "type": "endorserValidator",
                        "requests": "grpcs://localhost:8051",
                        "events": "grpcs://localhost:8053",
                        "server-hostname": "peer1.org1.example.com"
                    }
                ]
            },
            {
                "mspId": "Org2MSP",
                "tlsca": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org2.example.com/tlsca/tlsca.org2.example.com-cert.pem",
                "users": [{
                    "role": "admin",
                    "username": "peerOrg2Admin",
                    "keystore": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org2.example.com/users/Admin@org2.example.com/msp/keystore",
                    "signcerts": "../../../fabric-samples/first-network/crypto-config/peerOrganizations/org2.example.com/users/Admin@org2.example.com/msp/signcerts"
                }],
                "peers": [{
                        "type": "endorserValidator",
                        "requests": "grpcs://localhost:9051",
                        "events": "grpcs://localhost:9053",
                        "server-hostname": "peer0.org2.example.com"
                    },
                    {
                        "type": "endorserValidator",
                        "requests": "grpcs://localhost:10051",
                        "events": "grpcs://localhost:10053",
                        "server-hostname": "peer1.org2.example.com"
                    }
                ]
            }
        ]
    }
